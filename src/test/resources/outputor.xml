<?xml version="1.0" encoding="UTF-8"?>
<server>
		
	<!--窗口消息输出器配置-->
	<outputor>
		<!--输出器名称-->
		<name>jframe-screen</name>
		<!--是否启动输出器:true/false-->
		<enable>true</enable>
		<!--输出器类:窗口输出器-->
		<class>org.pinae.logmesh.output.ScreenOutputor</class>
		<parameters>
			<!--窗口标题-->
			<parameter key="title" value="logmesh --- Free Log Collector"/>
			<!--窗口初始宽度-->
			<parameter key="width" value="900"/>
			<!--窗口初始高度-->
			<parameter key="height" value="600"/>
			<!--窗口初始列数-->
			<parameter key="columns" value="80"/>
			<!--窗口初始行数-->
			<parameter key="rows" value="100"/>
			<!--窗口背景色-->
			<parameter key="background" value="#000000"/>
			<!--窗口文字颜色-->
			<parameter key="foreground" value="#00ff00"/>
		</parameters>
	</outputor>
	
	<!--转发消息输出器配置-->
	<outputor>
		<!--输出器名称-->
		<name>udp-forward</name>
		<!--是否启动输出器:true/false-->
		<enable>true</enable>
		<!--输出器类:转发输出器-->
		<class>org.pinae.logmesh.output.ForwardOutputor</class>
		<parameters>
			<!--输出协议：udp/tcp/jms-->
			<parameter key="protocol" value="udp"/>
			<!--转发目标地址，如果输出协议为jms，格式为：url:user:password:type:target-->
			<parameter key="destination" value="127.0.0.1"/>
			<!--转发目标端口-->
			<parameter key="port" value="516"/>
		</parameters>
	</outputor>
	
	<!--存储消息输出器配置-->
	<outputor>
		<!--输出器名称-->
		<name>file-store</name>
		<!--是否启动输出器:true/false-->
		<enable>true</enable>
		<!--输出器类:存储输出器-->
		<class>org.pinae.logmesh.output.StorerOutputor</class>
		<parameters>
			<!--输出方式：file/db/solr-->
			<parameter key="type" value="file"/>
			
			<parameter key="path" value="d:\TestData\log"/>
			<parameter key="title" value="message"/>
			<parameter key="ext" value="log"/>
		</parameters>
	</outputor>
	
</server>