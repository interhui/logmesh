<?xml version="1.0" encoding="UTF-8"?>
<route>
	<import file="root_router.xml"/>
	
	<rule>
		<name>IP_ROOT_RULE</name>
		<extend>RULE_ROOT</extend>
		
		<processor>
			<!--处理器名称 -->
			<name>RouterCustomProcessor</name>
			<!--是否启动处理器:true/false -->
			<enable>true</enable>
			<!--处理器类 -->
			<class>org.pinae.logmesh.component.router.custom.RouterCutsomProcessor</class>
			<parameters>
				<parameter key="type" value="IP_ROUTER"/>
			</parameters>
		</processor>
	</rule>
	
	<rule>
		<name>IP_RULE1</name>
		<extend>IP_ROOT_RULE</extend>
		<condition>
			<type>ip</type>
			<value>192.168.0.104</value>
		</condition>
	</rule>
	
	<rule>
		<name>IP_RULE2</name>
		<extend>IP_ROOT_RULE</extend>
		<condition>
			<type>ip</type>
			<value>192.168.0.105</value>
		</condition>
	</rule>
	
	<rule>
		<name>IP_RULE3</name>
		<extend>IP_ROOT_RULE</extend>
		<condition>
			<type>ip</type>
			<value>127.0.0.1</value>
		</condition>
	</rule>
</route>