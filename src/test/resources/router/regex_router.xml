<?xml version="1.0" encoding="UTF-8"?>
<route>
	<import file="root_router.xml"/>
	
	<rule>
		<name>REGEX_ROOT_RULE</name>
		<extend>RULE_ROOT</extend>
		
		<processor>
			<!--处理器名称 -->
			<name>RouterCustomProcessor</name>
			<!--是否启动处理器:true/false -->
			<enable>true</enable>
			<!--处理器类 -->
			<class>org.pinae.logmesh.component.router.custom.RouterCutsomProcessor</class>
			<parameters>
				<parameter key="type" value="REGEX_ROUTER"/>
			</parameters>
		</processor>
	</rule>
	
	<rule>
		<name>REGEX_RULE1</name>
		<extend>REGEX_ROOT_RULE</extend>
		<condition>
			<type>regex</type>
			<value>.*(Firewall).*</value>
		</condition>
	</rule>
	
	<rule>
		<name>REGEX_RULE2</name>
		<extend>REGEX_ROOT_RULE</extend>
		<condition>
			<type>regex</type>
			<value>.*(ASA|PIX).*</value>
		</condition>
	</rule>
</route>