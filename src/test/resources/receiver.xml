<?xml version="1.0" encoding="UTF-8"?>
<server>

	<!--UDP采集器配置-->
	<receiver>
		<!-- 采集器类型 udp/tcp/kafka -->
		<type>udp</type>
		<!--是否启动采集器:true/false-->
		<enable>true</enable>
		<!--是否记录原始数据-->
		<original>true</original>
		<!--消息编码, 当使用TextDecodeFilter时, 需要将codec制空-->
		<codec>gb2312</codec>
		<!--TCP/UDP采集器配置参数-->
		<parameters>
			<!--TCP/UDP监听端口-->
			<parameter key="port" value="514"/>
			<!--消息格式：string-->
			<parameter key="message" value="string"/>
		</parameters>
	</receiver>
	
	<!--TCP采集器配置-->
	<receiver>
		<type>tcp</type>
		<enable>true</enable>
		<original>true</original>
		<codec>utf8</codec>
		<parameters>
			<parameter key="port" value="514"/>
			<parameter key="message" value="string"/>
		</parameters>
	</receiver>

	<!-- Kafka采集器配置, 消息格式为 <String, String> -->
	<receiver>
		<type>kafka</type>
		<enable>false</enable>
		<original>true</original>
		<codec>utf8</codec>
		<!--Kafka采集器配置参数
			参考:http://kafka.apache.org/documentation.html#newconsumerconfigs
		-->
		<parameters>
			<!--消息主题-->
			<parameter key="topic" value="default"/>
			<!--Kafka地址-->
			<parameter key="bootstrap.servers" value="192.168.228.129:9092"/>
			<!--消息组编号-->
			<parameter key="group.id" value="default-group"/>
			<!--自动提交延迟-->
			<parameter key="enable.auto.commit" value="true"/>
			<!--自动提交延迟-->
			<parameter key="auto.commit.interval.ms" value="1000"/>
		</parameters>
	</receiver>
	
	<!-- 文件采集器 -->
	<receiver>
		<type>file</type>
		<enable>true</enable>
		<original>true</original>
		<codec>utf8</codec>
		<parameters>
			<!--消息主题-->
			<parameter key="file" value="d:\\demo.log"/>
			<!--Kafka地址-->
			<parameter key="index" value="d:\\demo.idx"/>
			<!--消息组编号-->
			<parameter key="cycle" value="30000"/>
		</parameters>
	</receiver>
	
</server>